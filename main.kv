FloatLayout:
    canvas.before:
        Color:
            rgba: rgba("#000000")
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "youtube videos downloader".title()
        size_hint: [None, None]
        size: self.texture_size
        pos_hint: {"top":0.94, "center_x":0.5}
        font_size: "27sp"
        color:rgba("#FF0000")
        bold: True
        canvas.before:
            Color:
                rgba: rgba("#000000")
            Rectangle:
                size: self.size
                pos: self.pos
    Label:
        text: "you can download youtube videos highest resolution"
        size_hint: [None, None]
        size: self.texture_size
        pos_hint: {"top":0.50, "center_x":0.5}
        font_size: "15sp"
        color:rgba("#FF0000")
        bold: True
        canvas.before:
            Color:
                rgba: rgba("#000000")
            Rectangle:
                size: self.size
                pos: self.pos
    TextInput:
        id: txt_input
        background_color: [1,1,1,1]
        pos_hint: {"top":0.8, "center_x":0.5}
        color: [0,0,0,1]
        bold: True
        font_size: "20sp"
        multiline: False
        size_hint: [0.85, 0.06]
    Button:
        id: save_btn
        text: "Mp4"
        background_normal: ""
        background_color: rgba("#FF0000")
        color: [1,1,1,1]
        bold: True
        font_size: "17sp"
        pos_hint: {"top":0.7, "x":0.1}
        size_hint: [0.3, 0.08]
        on_press:
            app.get_video_info(txt_input.text)
    Button:
        id: mp3_btn
        text: "Mp3"
        background_normal: ""
        background_color: rgba("#FF0000")
        color: [1,1,1,1]
        bold: True
        font_size: "18sp"
        pos_hint: {"top":0.7, "center_x":0.7}
        size_hint: [0.3, 0.08]
        on_press:
            app.get_mp3_info(txt_input.text)
    ProgressBar:
        id: progress_bar
        size_hint: [0.8, 0.1]
        pos_hint: {"top":0.5, "center_x":0.5}
        value: 0
    Label:
        id: title
        text: "Video Title : ".title()
        size_hint: [None, None]
        size: self.texture_size
        pos_hint: {"top":0.6, "center_x":0.5}
        font_size: "15"
        bold: True
        color: rgba("#FF0000")
    AsyncImage:
        id: thumbnail
        background_color: [1,1,1,1]
        pos_hint: {"top":0.4, "center_x":0.5}
        size_hint: [0.9, 0.3]
        source: ''